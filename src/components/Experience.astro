---
import Section from "./Section.astro"

const EXPERIENCE = [
  {
    title:'Carrera de Desarrollo Frontend React',
    place:'CoderHouse',
    date:'2021'
  },
  {
    title:'Master en CSS',
    place:'Udemy',
    date:'2022'
  },
  {
    title:'Licenciatura en An√°lisis de Sistemas',
    place:'Universidad de Buenos Aires',
    date:'2022-Actualmente'
  },
]
---
<Section id="experiencia" title="Experiencia">
  <div class="w-full py-8 relative flex flex-col items-center gap-4">
    <div class="-z-10 absolute top-0 left-0 lg:left-1/2 lg:-translate-x-1/2 w-14 h-full flex justify-center"><div class="h-full w-2 bg-slate-300/25 rounded-full"></div></div>
    {EXPERIENCE.map((e,i) => (
      <div class={`w-full flex ${i % 2 === 0 && 'lg:flex-row-reverse'} gap-4`}>
        <div class={`w-1/2 h-14 hidden lg:flex items-center ${i % 2 !== 0 && 'justify-end'}`}>
          <span class="text-white/75 font-light">{e.date}</span>
        </div>
        <span class="w-14 h-14 flex items-center justify-center flex-none text-white/75 text-xl rounded-full bg-slate-950 border border-slate-800">
          <i class="fa-solid fa-graduation-cap"></i>
        </span>
        <div class="w-full lg:w-1/2 px-4 py-4 rounded-xl bg-slate-950 border border-slate-800">
          <h3 class="text-lg font-medium">{e.title}</h3>
          <h4 class="text-white/75">{e.place}</h4>
          <span class="lg:hidden text-white/75 font-light">{e.date}</span>
        </div>
      </div>
    ))}
  </div>
</Section>