---
import Section from "./Section.astro"

const SKILLS = [
  'HTML','CSS','Bootstrap','Javascript','Git','Github','Tailwind CSS','SASS','React','Firebase','Typescript','Astro','Nodejs'
]
---
<Section id="habilidades" title="Habilidades">
  <ul class="w-full flex justify-center flex-wrap gap-4">
    {SKILLS.map(e => <li class="h-12 px-6 flex items-center text-white/75 rounded-xl bg-slate-950 border border-slate-800">{e}</li>)}
  </ul>
</Section>